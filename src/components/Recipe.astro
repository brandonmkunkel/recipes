---
import WakeLockButton from './WakeLockButton.astro'

const { title, url, tags } = Astro.props
---

<article>
  <h1>{title}</h1>

  {
    tags && tags.length > 0 && (
      <div class="tags-inline">
        <span class="tags-label">Tags</span>
        <ul class="tag-list inline">
          {tags.map((t: string) => (
            <li>
              <a href={`/recipes/tags/${t}/`}>{t}</a>
            </li>
          ))}
        </ul>
      </div>
    )
  }

  <WakeLockButton />

  <div class="recipe-body">
    <slot />
  </div>
</article>

<style>
  article {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  h1 h2 h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  p {
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .tags-inline {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    flex-wrap: wrap;
  }

  .tags-label {
    font-weight: 600;
    margin: 0;
  }

  .tag-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag-list.inline {
    display: inline-flex;
    align-items: center;
  }

  .tag-list li a {
    background: #efefef;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
  }

  .recipe-body {
    margin-top: 1rem;
  }
</style>

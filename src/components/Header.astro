---
import { Image } from "astro:assets";
import logo from "src/assets/logo.png";
---

<header class="header">
  <a href="/recipes/">
    <Image src={logo} alt="Logo" />
  </a>
  <nav>
    <ul>
      <li><a href="/recipes/">Recipes</a></li>
    </ul>
  </nav>
</div>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    background-color: white;
    color: black;
  }

  nav ul {
    display: flex;
    list-style: none;
  }

  nav ul li {
    margin-right: 1rem;
  }

  a {
    color: black;
    text-decoration: none;
  }
</style>

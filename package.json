{
  "name": "recipes",
  "type": "module",
  "version": "0.0.1",
  "description": "Repo to build static recipes site",
  "repository": "https://github.com/brandonmkunkel/recipes.git",
  "author": "Brandon Kunkel <38381956+brandonmkunkel@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "lint": "astro check"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/sitemap": "^3.4.0",
    "astro": "^5.17.0",
    "astro-pagefind": "^1.8.3",
    "g": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-astro"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
